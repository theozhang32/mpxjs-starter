{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "jest",
      "miniprogram-api-typings"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@vant/weapp/*": ["node_modules/@vant/weapp/dist/*"]
    }
  },
  "exclude": [
    "build",
    "dist",
    "config"
  ]
}
